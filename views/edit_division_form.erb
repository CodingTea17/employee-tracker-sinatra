<h1>Fill Out the Form Below</h1>
<form action="/divisions/<%= @id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch"/>
  <div class="form-group">
    <label for="description">Enter a Descriptive Name:</label>
    <input id="description" name="description" type="text" class="form-control" autofocus required>
  </div>
  <button type="submit" class="btn btn-success">Update</button>
  <a href="/"><button type="button" class="btn btn-info">Cancel</button></a>
</form>
