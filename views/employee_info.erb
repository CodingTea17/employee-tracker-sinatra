<form action="/employee/<%= @employee.id %>/delete" method="post">
    <input name="_method" type="hidden" value="delete"/>
    <h1>
      <%= @employee.name %>
      <button type="submit" class="btn btn-danger">Delete</button>
    </h1>
</form>

<form action="/employee/<%= @employee.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch"/>
  <div class="form-group">
    <label for="name">Enter a New Name:</label>
    <input id="name" name="name" type="text" class="form-control" autofocus>
  </div>
  <button type="submit" class="btn btn-warning">Update</button>
  <a href="/divisions/<%= @employee.division_id %>"><button type="button" class="btn btn-info">Cancel</button></a>
</form>
